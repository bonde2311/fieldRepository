<odoo>
    <!-- Customer Check-in Wizard Form -->
    <record id="view_customer_checkin_wizard_form" model="ir.ui.view">
        <field name="name">customer.checkin.wizard.form</field>
        <field name="model">customer.checkin.wizard</field>
        <field name="arch" type="xml">
            <form string="Customer Check-in">
                <sheet>
                    <group>
                        <group>
                            <field name="customer_id" required="1"/>
                            <field name="contact_id"/>
                        </group>
                        <group>
                            <field name="latitude" invisible="1"/>
                            <field name="longitude" invisible="1"/>
                        </group>
                    </group>
                    <field name="comment" nolabel="1" placeholder="Add a comment for this customer check-in..." widget="text"/>
                </sheet>
                <footer>
                    <button name="action_check_in" string="Check In" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Customer Check-out Wizard Form -->
    <record id="view_customer_checkout_wizard_form" model="ir.ui.view">
        <field name="name">customer.checkout.wizard.form</field>
        <field name="model">customer.checkout.wizard</field>
        <field name="arch" type="xml">
            <form string="Customer Check-out">
                <sheet>
                    <group>
                        <group>
                            <field name="customer_id" required="1"/>
                            <field name="contact_id"/>
                        </group>
                        <group>
                            <field name="latitude" invisible="1"/>
                            <field name="longitude" invisible="1"/>
                        </group>
                    </group>
                    <field name="comment" nolabel="1" placeholder="Add a comment for this customer check-out..." widget="text"/>
                </sheet>
                <footer>
                    <button name="action_check_out" string="Check Out" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Customer Check-in Action -->
    <record id="action_customer_checkin_wizard" model="ir.actions.act_window">
        <field name="name">Customer Check-in</field>
        <field name="res_model">customer.checkin.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Customer Check-out Action -->
    <record id="action_customer_checkout_wizard" model="ir.actions.act_window">
        <field name="name">Customer Check-out</field>
        <field name="res_model">customer.checkout.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>